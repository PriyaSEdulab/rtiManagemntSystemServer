{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true, // Enables all strict type-checking options
    "strictFunctionTypes": true, // Checks function type variance
    "strictPropertyInitialization": false, // Ensures class properties are correctly initialized
    "noFallthroughCasesInSwitch": true // Ensures that switch statements have explicit cases for fallthrough
  }
}
